<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >

    <!-- 返回按钮 -->

    <!--            顶部导航栏开始-->

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/red_header_max"
        android:layout_marginTop="0dp"
        android:layout_height="150dp">
        <RelativeLayout
            android:layout_height="match_parent"
            android:id="@+id/top1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/local1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/back_header" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/local1"
                android:text="历史名人"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"

                ></TextView>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/search_bg">
                </EditText>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="62dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/search" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/bottom_pink_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:background="@drawable/yellow_background">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/liuding" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:text="相关介绍"
                    android:id="@+id/introduce"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    >

                </TextView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>



</RelativeLayout>