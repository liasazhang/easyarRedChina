<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_main_header" />

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:fadingEdge="none"
    android:scrollbars="none">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/bottom"
        android:layout_marginTop="-10dp"
        android:layout_gravity="center_horizontal"

        android:orientation="vertical">
        <!--            顶部导航栏开始-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_marginTop="-30dp"
            android:src="@drawable/lopper"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-20dp"
        android:background="@drawable/background_home"
        android:orientation="vertical">

        <!--            顶部导航栏止-->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/home_function" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:id="@+id/bottom2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"

                android:id="@+id/bor1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="167dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_history" />


            </RelativeLayout>
            <RelativeLayout

                android:layout_height="100dp"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:id="@+id/bor2"
                android:layout_marginLeft="30dp"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="167dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/process" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_height="100dp"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:id="@+id/bor3"
                android:layout_marginLeft="30dp"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="167dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/march" />

            </RelativeLayout>

            <RelativeLayout

                android:layout_height="100dp"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:id="@+id/bor4"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="167dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ar" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/recommend"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/home_recommend" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"


            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp"

                android:id="@+id/recommend1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_recomm1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="忻州.五台山"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="风景优美 佛教圣地"
                        android:textSize="10sp" />

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout

                android:layout_height="140dp"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:id="@+id/recommend2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_recomm2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="晋中.王家大院"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="依山而建 历史悠久"
                        android:textSize="10sp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"


            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp"

                android:id="@+id/recommend3"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_recomm1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="忻州.五台山"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="风景优美 佛教圣地"
                        android:textSize="10sp" />

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout

                android:layout_height="140dp"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:id="@+id/recommend4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_recomm2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="晋中.王家大院"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="依山而建 历史悠久"
                        android:textSize="10sp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:textSize="25sp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/home_selected"/>

</LinearLayout>
    </LinearLayout>



</ScrollView>
</LinearLayout>