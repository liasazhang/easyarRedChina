<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".activity.OneFragment">
    <include layout="@layout/layout_main_header" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:fadingEdge="none"
        android:scrollbars="none">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/bottom"
            android:layout_marginTop="-10dp"
            android:layout_gravity="center_horizontal"

            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_marginTop="-20dp"
                android:background="@drawable/background_home"
                android:orientation="vertical">

                <!--            顶部导航栏止-->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_function" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:id="@+id/bottom2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"

                        android:id="@+id/bor1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        >

                        <ImageView
                            android:id="@+id/home_history"
                            android:layout_width="match_parent"
                            android:layout_height="167dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/home_history" />


                    </RelativeLayout>
                    <RelativeLayout

                        android:layout_height="100dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:id="@+id/bor2"
                        android:layout_marginLeft="30dp"

                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="167dp"
                            android:id="@+id/changzhen"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/march" />


                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_height="100dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:id="@+id/bor3"
                        android:layout_marginLeft="30dp"

                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <ImageView
                            android:id="@+id/process"
                            android:layout_width="match_parent"
                            android:layout_height="167dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/process" />

                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_height="100dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:id="@+id/bor4"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="167dp"
                            android:id="@+id/ar"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:onClick="playVideo"
                            android:scaleType="fitXY"
                            android:src="@drawable/ar" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/recommend"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/home_recommend" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"


                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="140dp"

                        android:id="@+id/recommend1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/lipin" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="湘江之战"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="1934年11月27日"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout

                        android:layout_height="140dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:id="@+id/recommend2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/zhaoze" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="遵义会议"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="1935年1月15日至17日"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"


                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="140dp"

                        android:id="@+id/recommend3"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/xueshan" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="爬雪山"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="1934年11月27日"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout

                        android:layout_height="140dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:id="@+id/recommend4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/tongdao" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="通道会议"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="1935年4月6日"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"


                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="140dp"

                        android:id="@+id/recommend5"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/xueshan" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="强渡大渡河、飞夺泸定桥"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="1935年5月25日至29日"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout

                        android:layout_height="140dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:id="@+id/recommend6"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/banner1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="突破腊子口"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="1935年9月16日"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"


                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="140dp"

                        android:id="@+id/recommend7"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/xueshan" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="直罗镇大捷"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="1935年10月19日"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout

                        android:layout_height="140dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:id="@+id/recommend8"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_recomm2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="血战独树镇"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="1934年11月26日"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"


                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="140dp"

                        android:id="@+id/recommend9"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ludingqiao" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="激战嘉陵江"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="1935年初"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout

                        android:layout_height="140dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:id="@+id/recommend10"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/zhaoze" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="转战乌蒙山"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="1935年11月19日"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>



    </ScrollView>

</FrameLayout>
